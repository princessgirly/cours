console.log("début du programme");
var i = 1;
while(i <= 5) {
console.log(i);
i++;
} console.log("Fin programme");

// resultat :
1 début du programme
1
2
3
4
5
Fin programme



var i = 0;
while (i <= 4) {
   console.log("J'ai soif !");
   i++;
}

/*resultat :
5 J'ai soif !
*/


var nombre = 0;
while (nombre < 50 || nombre > 100) {
  nombre = Number(prompt("Entrer un nombre compris entre 50 et 100"));
  console.log(nombre);
}

//Résultat : Tant que la valeur entrée n'est pas exacte (c-a-d nb entre 50 et 100) alors la boucle est répêtée jusqu'à ce que la condition soit vraie
// et la boucle s'arrête



var lettre = "";
while (lettre !== "X") {
    lettre = prompt("Tapez une lettre ou X pour sortir :");
    console.log(lettre);
}

//Résultat : Tant que la valeur entrée n'est pas exacte (c-a-d X) alors la boucle est répêtée jusqu'à ce que la condition soit vraie
// et la boucle s'arrête

